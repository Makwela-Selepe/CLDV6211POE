@model Event_Ease.Models.Venue

<h1>Delete Venue</h1>
<h3>Are you sure you want to delete this venue?</h3>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.VenueName</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.VenueLocation</dd>

    <dt class="col-sm-2">Capacity</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>
    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 300px;" />
        }
        else
        {
            <span>No image provided.</span>
        }
    </dd>

</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VenueId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Cancel</a>
</form>
